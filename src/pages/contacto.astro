---
import Layout from "../layouts/Layout.astro";
import { FaFacebook, FaWhatsapp, FaInstagram } from 'react-icons/fa';
import { IoLocationSharp, IoCallSharp, IoMailSharp } from 'react-icons/io5';
---
<Layout title="Contáctanos | Ocaña FC">
  <main class="bg-gray-100 py-8">
    <section class="container mx-auto p-8 bg-white rounded-lg shadow-md">
      <h2 class="text-3xl font-bold text-center mb-8 text-black-600">Contacto</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Información de Contacto -->
        <div>
          <h3 class="text-2xl font-semibold mb-4 text-gray-800">Información de Contacto</h3>
          <div class="flex items-start mb-4">
            <IoLocationSharp className="text-green-600 text-2xl mr-4" />
            <p class="text-lg text-gray-700">Dirección: Calle 123, Barrio Centro, Ocaña</p>
          </div>
          <div class="flex items-start mb-4">
            <IoCallSharp className="text-green-600 text-2xl mr-4" />
            <p class="text-lg text-gray-700">Teléfono: (123) 456-7890</p>
          </div>
          <div class="flex items-start mb-4">
            <IoMailSharp className="text-green-600 text-2xl mr-4" />
            <p class="text-lg text-gray-700">Correo: contacto@ocanafc.com</p>
          </div>
          
          <!-- Mapa Interactivo -->
          <div class="mb-8">
            <h3 class="text-2xl font-semibold mb-4 text-gray-800">Encuéntranos Aquí</h3>
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.086742339326!2d-122.0856482846813!3d37.4219999798251!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fb749b43f6e3f%3A0x4c4b0a6e4f0d0a07!2sGoogleplex!5e0!3m2!1sen!2sus!4v1596454789499!5m2!1sen!2sus"
              width="100%"
              height="300"
              style="border:0;"
              allowfullscreen=""
              aria-hidden="false"
              tabindex="0"
            ></iframe>
          </div>
        </div>
        
        <!-- Formulario de Contacto -->
        <form action="#" method="POST" class="bg-gray-50 p-6 rounded-lg shadow-md">
          <div class="mb-4">
            <label for="name" class="block text-lg font-medium text-gray-700">Nombre</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Ingrese su nombre"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
            />
          </div>
          
          <div class="mb-4">
            <label for="email" class="block text-lg font-medium text-gray-700">Correo electrónico</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Ingrese su correo electrónico"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
            />
          </div>
          
          <div class="mb-4">
            <label for="message" class="block text-lg font-medium text-gray-700">Mensaje</label>
            <textarea
              id="message"
              name="message"
              placeholder="Escriba su mensaje aquí"
              rows="5"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full bg-primary text-white px-4 py-2 rounded-md hover:bg-green-900 transition duration-300"
          >
            Enviar mensaje
          </button>
        </form>
      </div>
      
      <!-- Redes Sociales -->
      <div class="mt-8 flex flex-col items-center">
        <p class="text-xl text-gray-700 mb-4">También nos puedes contactar por aquí:</p>
        <div class="flex justify-center gap-6">
          <a href="https://www.facebook.com/OcanaFC2021" class="text-blue-600 hover:text-blue-800 transition duration-300"><FaFacebook size={40} /></a>
          <a href="URL_TWITTER" class="text-green-500 hover:text-green-700 transition duration-300"><FaWhatsapp size={40} /></a>
          <a href="https://www.instagram.com/ocana.fc?igsh=MXFxdHkwNTk1Mm83dQ==" class="text-pink-500 hover:text-pink-700 transition duration-300"><FaInstagram size={40} /></a>
        </div>
      </div>
    </section>
  </main>
</Layout>
