<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contactanos | Ocaña Futbol Club</title>
    <link rel="icon" type="image/png" href="img/logo.png" />
    <!-- Tailwind CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Swiper CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />

    <style>
      /* Color personalizado para el fondo del nav */
      nav {
        background-color: #218116ff;
      }
      a {
        background-color: #218116ff;
      }
    </style>
  </head>

  <body class="bg-gray-100">
    <!-- Navigation -->
    <nav class="text-white py-4">
      <div class="container mx-auto flex justify-between items-center">
        <div class="flex items-center">
          <img
            src="/img/logo.png"
            alt="Escudo del equipo"
            class="h-12 w-12 mr-2"
          />
          <a href="#" class="text-lg font-bold mr-4">Ocaña FC</a>
          <ul class="hidden md:flex space-x-4">
            <li><a href="/" class="hover:text-gray-300">Inicio</a></li>
            <li><a href="/equipos" class="hover:text-gray-300">Equipos</a></li>
            <li>
              <a href="/noticias" class="hover:text-gray-300">Noticias</a>
            </li>
            <li><a href="/galeria" class="hover:text-gray-300">Galeria</a></li>
            <li><a href="/contacto" class="hover:text-gray-300">Contacto</a></li>
          </ul>
        </div>
        <div class="flex items-center">
          <a
            href="https://www.facebook.com/OcanaFC2021"
            class="text-gray-300 hover:text-white mr-4"
            ><i class="fab fa-facebook"></i></a
          >
          <a href="#" class="text-gray-300 hover:text-white mr-4"
            ><i class="fab fa-twitter"></i></a
          >
          <a href="https://www.instagram.com/ocana.fc?igsh=MXFxdHkwNTk1Mm83dQ==" class="text-gray-300 hover:text-white mr-4"
            ><i class="fab fa-instagram"></i></a
          >
        </div>
      </div>
    </nav>
    <!-- Sección de contacto -->
    <section class="py-8">
      <div class="container mx-auto">
        <h2 class="text-2xl font-semibold mb-4">Contacto</h2>
        <form action="#" method="POST" class="max-w-md">
          <!-- Nombre -->
          <div class="mb-4">
            <label for="name" class="block font-medium">Nombre</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Ingrese su nombre"
              class="w-full px-4 py-2 border rounded-md"
            />
          </div>
          <!-- Correo electrónico -->
          <div class="mb-4">
            <label for="email" class="block font-medium"
              >Correo electrónico</label
            >
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Ingrese su correo electrónico"
              class="w-full px-4 py-2 border rounded-md"
            />
          </div>
          <!-- Mensaje -->
          <div class="mb-4">
            <label for="message" class="block font-medium">Mensaje</label>
            <textarea
              id="message"
              name="message"
              placeholder="Escriba su mensaje aquí"
              rows="5"
              class="w-full px-4 py-2 border rounded-md"></textarea>
          </div>
          <!-- Botón de enviar -->
          <button
            type="submit"
            class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
            >Enviar mensaje</button
          >
        </form>
    </div>
    
    </section>
  </body>
</html>
