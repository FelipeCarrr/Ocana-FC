---
import Layout from "../layouts/Layout.astro";
import { FaFacebook, FaWhatsapp, FaInstagram } from 'react-icons/fa';
---

<Layout title="Contactanos | Ocaña Futbol Club">
  <main>
    <section class="py-8">
      <div class="container mx-auto">
        <h2 class="text-2xl font-semibold mb-4">Contacto</h2>
        <div class="flex flex-wrap items-start gap-8">
          <form action="#" method="POST" class="max-w-md">

            <div class="mb-4">
              <label for="name" class="block font-medium">Nombre</label>
              <input
                type="text"
                id="name"
                name="name"
                placeholder="Ingrese su nombre"
                class="w-full px-4 py-2 border rounded-md"
              />
            </div>
            
            <div class="mb-4">
              <label for="email" class="block font-medium">Correo electrónico</label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="Ingrese su correo electrónico"
                class="w-full px-4 py-2 border rounded-md"
              />
            </div>
            
            <div class="mb-4">
              <label for="message" class="block font-medium">Mensaje</label>
              <textarea
                id="message"
                name="message"
                placeholder="Escriba su mensaje aquí"
                rows="5"
                class="w-full px-4 py-2 border rounded-md"
              ></textarea>
            </div>
            
            <button
              type="submit"
              class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
            >
              Enviar mensaje
            </button>
          </form>
          
          <div class="flex items-center gap-4">
            <p class="text-lg text-gray-700">También nos puedes contactar por aquí:</p>
            <a href="https://www.facebook.com/OcanaFC2021"><FaFacebook size={100} /></a>
            <a href="URL_TWITTER"><FaWhatsapp size={100} /></a>
            <a href="https://www.instagram.com/ocana.fc?igsh=MXFxdHkwNTk1Mm83dQ=="><FaInstagram size={100} /></a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>