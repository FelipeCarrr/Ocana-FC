---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contactanos | Ocaña Futbol Club">
  <main>
    <section class="py-8">
      <div class="container mx-auto">
        <h2 class="text-2xl font-semibold mb-4">Contacto</h2>
        <form action="#" method="POST" class="max-w-md">
          <!-- Nombre -->
          <div class="mb-4">
            <label for="name" class="block font-medium">Nombre</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Ingrese su nombre"
              class="w-full px-4 py-2 border rounded-md"
            />
          </div>
          <!-- Correo electrónico -->
          <div class="mb-4">
            <label for="email" class="block font-medium"
              >Correo electrónico</label
            >
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Ingrese su correo electrónico"
              class="w-full px-4 py-2 border rounded-md"
            />
          </div>
          <!-- Mensaje -->
          <div class="mb-4">
            <label for="message" class="block font-medium">Mensaje</label>
            <textarea
              id="message"
              name="message"
              placeholder="Escriba su mensaje aquí"
              rows="5"
              class="w-full px-4 py-2 border rounded-md"></textarea>
          </div>
          <!-- Botón de enviar -->
          <button
            type="submit"
            class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
            >Enviar mensaje</button
          >
        </form>
      </div>
    </section>
  </main>
</Layout>
